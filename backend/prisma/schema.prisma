// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  EMPLOYEE
  MANAGER
  HR
  ADMIN
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum LeaveTypeCode {
  ANNUAL
  SICK
  UNPAID
  MATERNITY
  PATERNITY
  BEREAVEMENT
  OTHER
}

model User {
  id                String         @id @default(uuid())
  email             String         @unique
  password          String
  fullName          String
  role              UserRole       @default(EMPLOYEE)
  departmentId      String?
  managerId         String?
  annualLeaveQuota  Int            @default(12) // Số ngày phép năm
  sickLeaveQuota    Int            @default(30) // Số ngày phép bệnh
  phoneNumber       String?
  avatar            String?
  isActive          Boolean        @default(true)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  // Relations
  department        Department?    @relation(fields: [departmentId], references: [id])
  manager           User?          @relation("ManagerEmployee", fields: [managerId], references: [id])
  employees         User[]         @relation("ManagerEmployee")
  leaveRequests     LeaveRequest[]
  approvals         Approval[]
  notifications     Notification[]

  @@index([email])
  @@index([departmentId])
  @@index([managerId])
}

model Department {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users User[]
}

model LeaveType {
  id          String        @id @default(uuid())
  code        LeaveTypeCode @unique
  name        String
  description String?
  maxDays     Int?          // Số ngày tối đa cho loại phép này
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  leaveRequests LeaveRequest[]
}

model LeaveRequest {
  id          String      @id @default(uuid())
  userId      String
  leaveTypeId String
  startDate   DateTime
  endDate     DateTime
  totalDays   Float       // Số ngày nghỉ (có thể 0.5 cho nửa ngày)
  reason      String
  status      LeaveStatus @default(PENDING)
  attachment  String?     // URL to uploaded file
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  user      User       @relation(fields: [userId], references: [id])
  leaveType LeaveType  @relation(fields: [leaveTypeId], references: [id])
  approvals Approval[]

  @@index([userId])
  @@index([leaveTypeId])
  @@index([status])
  @@index([startDate])
}

model Approval {
  id             String       @id @default(uuid())
  leaveRequestId String
  approverId     String
  status         LeaveStatus
  comments       String?
  approvedAt     DateTime     @default(now())

  // Relations
  leaveRequest LeaveRequest @relation(fields: [leaveRequestId], references: [id], onDelete: Cascade)
  approver     User         @relation(fields: [approverId], references: [id])

  @@index([leaveRequestId])
  @@index([approverId])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String
  isRead    Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
}

model Holiday {
  id          String   @id @default(uuid())
  name        String
  date        DateTime
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
}

model SystemSetting {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
